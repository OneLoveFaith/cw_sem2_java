<?xml version="1.0" encoding="UTF-8"?>

<!--Imports-->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pharmacy.Controllers.MakeOrder">
    <children>
        <AnchorPane prefHeight="86.0" prefWidth="900.0" style="-fx-background-color: #2e3348;">
            <children>
                <Label layoutX="345.0" layoutY="13.0" prefHeight="60.0" prefWidth="211.0" text="Make order" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font size="40.0" />
                    </font></Label>
<!--                Log out button-->
                <Button fx:id="LogOutButton" layoutX="802.0" layoutY="31.0" mnemonicParsing="false" text="Log out" />
<!--                Home button-->
                <Button fx:id="HomeButton" layoutX="69.0" layoutY="31.0" mnemonicParsing="false" text="Home" />
            </children>
        </AnchorPane>
<!--        Name or serial number field-->
        <TextField fx:id="medicine" layoutX="277.0" layoutY="143.0" prefHeight="60.0" prefWidth="347.0" promptText="Enter name or serial number">
            <font>
                <Font size="24.0" />
            </font>
        </TextField>
<!--        Quantity field-->
        <TextField fx:id="quant" layoutX="277.0" layoutY="225.0" prefHeight="60.0" prefWidth="347.0" promptText="Enter quantity">
            <font>
                <Font size="24.0" />
            </font>
        </TextField>
<!--        Submit button-->
        <Button fx:id="submitButton" layoutX="362.0" layoutY="495.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="177.0" text="Submit">
            <font>
                <Font size="25.0" />
            </font>
        </Button>
<!--        Address field-->
        <TextField fx:id="address" layoutX="277.0" layoutY="311.0" prefHeight="60.0" prefWidth="347.0" promptText="Enter client's address">
            <font>
                <Font size="24.0" />
            </font>
        </TextField>
    </children>
</AnchorPane>
